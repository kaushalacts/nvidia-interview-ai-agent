# =========================
# Stage 1 — Builder
# =========================
FROM python:3.12-slim AS builder

WORKDIR /build

RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt constraints.txt .

# 1️⃣ Install CPU-only torch (locked)
RUN pip install --no-cache-dir \
    -c constraints.txt \
    torch torchvision torchaudio \
    --index-url https://download.pytorch.org/whl/cpu

# 2️⃣ Install sentence-transformers WITHOUT deps
RUN pip install --no-cache-dir --no-deps sentence-transformers==2.2.2

# 3️⃣ Build wheels for remaining deps (NO torch resolution)
RUN pip wheel --no-cache-dir \
    -c constraints.txt \
    -r requirements.txt \
    -w /wheels


# =========================
# Stage 2 — Runtime
# =========================
FROM python:3.12-slim

WORKDIR /app

COPY --from=builder /wheels /wheels
RUN pip install --no-cache-dir /wheels/* && rm -rf /wheels

COPY api ./api
COPY agents ./agents
COPY rag ./rag

RUN useradd -m appuser
USER appuser

EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=3s --retries=3 \
  CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/plan/today')"

CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]

